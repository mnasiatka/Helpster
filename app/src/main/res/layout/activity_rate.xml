<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="match_parent"
	android:gravity="center_horizontal"
	android:orientation="vertical" >

	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:gravity="center"
		android:text="This request has been fulfilled!"
		android:textSize="20dp" />

	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:gravity="center"
		android:text="Please take a moment to review your experience" />

	<EditText
		android:id="@+id/RATE_EDITTEXT_REVIEW"
		android:layout_width="fill_parent"
		android:layout_height="100dp"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_marginTop="100dp"
		android:gravity="center_horizontal"
		android:hint="Review your experience here!"
		android:inputType="textMultiLine" />

	<RatingBar
		android:id="@+id/RATE_RATINGBAR_RATING"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:numStars="5"
		android:rating="3.0"
		android:stepSize="1.0" />

	<Button
		android:id="@+id/RATE_BUTTON_SUBMIT"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="onClick"
		android:text="Submit" />

</LinearLayout>