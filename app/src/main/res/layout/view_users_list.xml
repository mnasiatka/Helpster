<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/VIEWUSERSLIST_IMAGEVIEW_PROFILE"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/blank_profile" />

    <TextView
        android:id="@+id/VIEWUSERSLIST_TEXTVIEW_NAME"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/VIEWUSERSLIST_IMAGEVIEW_PROFILE"
        android:layout_marginLeft="5dp"
        android:textSize="@color/black"
        android:layout_toRightOf="@id/VIEWUSERSLIST_IMAGEVIEW_PROFILE"
        android:text="name" />

</RelativeLayout>