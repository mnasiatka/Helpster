<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/REGISTER_RELATIVELAYOUT_MAINLAYOUT"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop = "16dp"
    android:paddingBottom = "16dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="@color/backgroundColor" >

    <EditText
        android:id="@+id/REGISTER_EDITTEXT_FULLNAME"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textColorHint="@color/LightGrey"
        android:background="@drawable/edittext"
        android:hint="Full Name"
        android:inputType="textCapWords"/>

    <EditText
        android:id="@+id/REGISTER_EDITTEXT_USERNAME"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/REGISTER_EDITTEXT_FULLNAME"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/LightGrey"
        android:layout_weight="1"
        android:background="@drawable/edittext"
        android:hint="Username" />

    <TextView
        android:id="@+id/REGISTER_TEXTVIEW_USERNAMEDISPLAY"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/REGISTER_EDITTEXT_USERNAME"
        android:gravity="center"
        android:text="This username is already taken."
        android:visibility="visible" />

    <EditText
        android:id="@+id/REGISTER_EDITTEXT_EMAIL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_below="@id/REGISTER_TEXTVIEW_USERNAMEDISPLAY"
        android:layout_marginTop="5dp"
        android:textColorHint="@color/LightGrey"
        android:layout_weight="1"
        android:background="@drawable/edittext"
        android:hint="Email"
        android:inputType="textEmailAddress"/>


    <EditText
        android:id="@+id/REGISTER_EDITTEXT_PASSWORD"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_below="@id/REGISTER_EDITTEXT_EMAIL"
        android:textColorHint="@color/LightGrey"
        android:layout_weight="1"
        android:background="@drawable/edittext"
        android:hint="Password" />

    <TextView
        android:id="@+id/REGISTER_TEXTVIEW_PASSWORDHELP"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/REGISTER_EDITTEXT_PASSWORD"
        android:gravity="center"
        android:text="Enter a password with at least 6 characters"
        android:visibility="visible" />

        <ImageView
            android:id="@+id/REGISTER_IMAGEVIEW_PROFILEPICTURE"
            android:layout_width="175dp"
            android:layout_height="175dp"

            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/blank_profile"
            android:visibility="gone"  />

        <Button
            android:id="@+id/REGISTER_BUTTON_ADDPICTURE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/REGISTER_IMAGEVIEW_PROFILEPICTURE"
            android:layout_centerHorizontal="true"
            android:text="Add photo"
            android:background="@drawable/blue_btn"
            android:textColor="@color/white"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:visibility="gone"
            android:shadowColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp" />

        <Button
            android:id="@+id/REGISTER_BUTTON_REGISTER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/REGISTER_TEXTVIEW_PASSWORDHELP"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="Register"
            android:background="@drawable/blue_btn"
            android:textColor="@color/white"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp" />

</RelativeLayout>